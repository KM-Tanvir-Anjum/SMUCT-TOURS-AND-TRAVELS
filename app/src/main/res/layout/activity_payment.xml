<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.PaymentActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Payment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:text="Make payment to 2153361231357852335 "
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:gravity="left"
        android:text="Enter Your Account Number"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/source_account"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/bg_edit_text"
        android:hint="Enter a valid Account number"
        android:paddingStart="10dp"
        android:textColor="@color/black"
        android:textColorHint="#70000000"
        android:textCursorDrawable="@color/bg_color"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:gravity="left"
        android:text="Enter Amount"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="325dp"
        android:background="@drawable/bg_edit_text"
        android:hint="Enter amount"
        android:paddingStart="10dp"
        android:textColor="@color/black"
        android:textColorHint="#70000000"
        android:textCursorDrawable="@color/bg_color"
        android:textSize="16sp" />

    <Button
        android:id="@+id/create_account_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="380dp"
        android:background="@drawable/bg_btn"
        android:gravity="center"
        android:text="Make Payment"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>