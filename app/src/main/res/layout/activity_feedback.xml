<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/advance_search_backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back_icon"/>


        <LinearLayout
            android:id="@+id/advance_search_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Give Feedback About Your Seat"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Help us to improve and help general people to find the best seat."
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Route"
                    android:textSize="18sp"
                    android:textColor="@color/primary"
                    android:layout_centerHorizontal="true"/>
                <Spinner
                    android:id="@+id/feedback_route_spinner"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd= "10dp"
                    android:paddingTop = "5dp"
                    android:paddingBottom = "5dp"
                    android:entries="@array/Route"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Season"
                    android:textSize="18sp"
                    android:textColor="@color/bg_color"
                    android:layout_centerHorizontal="true"/>
                <Spinner
                    android:id="@+id/feedback_season_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd= "10dp"
                    android:paddingTop = "5dp"
                    android:paddingBottom = "5dp"
                    android:entries="@array/Season"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Day/Night"
                    android:textSize="18sp"
                    android:textColor="@color/bg_color"
                    android:layout_centerHorizontal="true"/>
                <Spinner
                    android:id="@+id/feedback_daynight_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd= "10dp"
                    android:paddingTop = "5dp"
                    android:paddingBottom = "5dp"
                    android:entries="@array/DayNight"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Total Seat"
                    android:textSize="18sp"
                    android:textColor="@color/bg_color"
                    android:layout_centerHorizontal="true"/>

                <Spinner
                    android:id="@+id/total_seat_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:entries="@array/TotalSeat"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/seat1_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Seat 1"
                    android:textColor="@color/bg_color"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/feedback_seat1_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd= "10dp"
                    android:paddingTop = "5dp"
                    android:paddingBottom = "5dp"
                    android:entries="@array/Seat1"/>

            </LinearLayout>

            <LinearLayout

                android:id="@+id/seat2_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Seat 2"
                    android:textSize="18sp"
                    android:textColor="@color/bg_color"
                    android:layout_centerHorizontal="true"/>
                <Spinner
                    android:id="@+id/feedback_seat2_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd= "10dp"
                    android:paddingTop = "5dp"
                    android:paddingBottom = "5dp"
                    android:entries="@array/Seat2"/>

            </LinearLayout>

            <LinearLayout

                android:id="@+id/seat3_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Seat 3"
                    android:textSize="18sp"
                    android:textColor="@color/bg_color"
                    android:layout_centerHorizontal="true"/>
                <Spinner
                    android:id="@+id/feedback_seat3_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd= "10dp"
                    android:paddingTop = "5dp"
                    android:paddingBottom = "5dp"
                    android:entries="@array/Seat2"/>

            </LinearLayout>

            <LinearLayout

                android:id="@+id/ratings_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Ratings"
                    android:textSize="18sp"
                    android:textColor="@color/bg_color"
                    android:layout_centerHorizontal="true"/>
                <Spinner
                    android:id="@+id/feedback_rateings_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd= "10dp"
                    android:paddingTop = "5dp"
                    android:paddingBottom = "5dp"
                    android:entries="@array/Ratings"/>

            </LinearLayout>

            <Button
                android:id="@+id/feedback_button_spinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_btn"
                android:gravity="center"
                android:text="Upload Feedback"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold">

            </Button>


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>